          #minicurso5.modal.hide.fade{tabeindex: '-1', role: 'dialog', aria:{labelledby: 'minicurso5Label', hidde: true}}
            .modal-header
              %button.close{type: 'button', data:{dismiss: 'modal'}, aria:{hidden: 'true'}} x
