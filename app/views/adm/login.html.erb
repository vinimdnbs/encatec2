<div class="container">
  <div class="row">
    <div class="span4"></div>
    <div class="span4">
      <div class="well" id="login-form">
        <h2>Log In</h2>
        <%= form_tag :action=>"login_attempt" do %>

            <%= label :username, "UsuÃ¡rio:" %>
            <%= text_field_tag :username, nil, :class=>"login-input" %>

            <%= label :senha, "Senha:" %>
            <%= password_field_tag :password, nil, :class=>"login-input" %>
            <br/>
